            </MudTh>
            <MudTh>
                <MudTableSortLabel T="Cliente" SortBy="@(c => c.Direccion)">Dirección</MudTableSortLabel>
            </MudTh>
            <MudTh>
                <MudTableSortLabel T="Cliente" SortBy="@(c => c.Ciudad)">Ciudad</MudTableSortLabel>
            </MudTh>
